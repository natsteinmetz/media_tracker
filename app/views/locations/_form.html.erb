<h2>New Location</h2>
<%= form_for(@location) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :type %><br />
    <%= f.text_field :type %>
  </p>

  <p>
    <%= f.label :room %><br />
    <%= f.text_field :room %>
  </p>

  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>

  <%= f.submit %>
<% end %>

